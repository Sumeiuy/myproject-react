@import '../common/shadow.less';

.chartMain{
  display: flex;
  flex-direction: column;
  height: 340px;
  min-width: 247px;
  background: #fff;
  padding-left:18px;
  margin: 0 6px 0 0;
  &:hover{
    .z-depth-2;
  }
}
.colWrapper .chartMain:nth-child(4){
  background: #fff;
}
.chartHeader {
  flex-grow: 0;
  width: 100%;
  height: 45px;
}
.chartLegend {
  flex-grow: 0;
  height: auto;
  margin-bottom: 5px;
}
.oneLegend {
  display: inline-block;
  margin-right: 10px;
  font-size: 12px;
  margin-bottom: 5px;
  color: #777;
}
.legendIcon {
  display: inline-block;
  width: 10px;
  height: 10px;
  border-radius: 100%;
  margin-right: 5px;
}
.chartTitle {
  float: left;
  width: 100%;
}
.chartTitleText {
  line-height: 45px;
  font-size: 15px;
  color: #4c4c4c;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  vertical-align: middle;
}
.chartTiltleTextIcon {
  font-size: 15px;
  margin-right: 8px;
  line-height: 45px;
}
.seeIcon {
  float:right;
  margin-right: -6px;
  margin-left: -50px;
  width: 25px;
  height: 45px;
  line-height: 45px;
  cursor: pointer;
}
